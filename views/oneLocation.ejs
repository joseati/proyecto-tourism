<%- include("navbar") %>
 <!-- Seccion una localidad -->
 
<header class=" col-12 header-onelocation text-center "
style="background-image: url(/images/locations/<%=result[0].img%>);">
  <div class="bg-black1">
    <div class="col-12 col-md-6 offset-md-3 col-xl-4 offset-xl-4 d-flex flex-column justify-content-center align-items-center slogan-locations ">
      <div class="text-center">
       <h1 class="name-loc"><%= result[0].location_name %></h1> 
  
      </div>
    </div>
  </div>
  
</header>
<main class="row">

 <section class="col-12 ">
  <div class=" p-5 d-flex flex-column justify-content-center align-items-center px-md-5 places">
   <h3>Lugares de <%= result[0].location_name %>
   </h3> 
   <hr class="my-md-5">

  </div>
 </section> 
<!-- Seccion2 : places -->
<Section class="col-12 ">
  <div class="d-flex flex-row flex-wrap justify-content-around p-5">
    <% resultPlace.forEach(place => { %>
      <div class="card" style="width: 18rem;">
        <img src="/images/places/<%= place.img_place %>" class="card-img-top" alt="...">
        <div class="card-body text-center bg-sc2">
          <p class="card-text"> <%= place.place_name%></p>
          <a href="/places/delLogicPlace/<%= place.place_id %>" class="btn btn-primary" type="button">Borrar lugar</a>
        <a href="/places/formEditPlace/<%= place.place_id %>" class="btn btn-primary" type="button">Editar lugar</a>
        </div>
        
      </div>

      <%  }) %>
        </div>
      </div>
      <div class="card">
       
        
      
</Section>
<!-- Seccion 3 : Formulario -->
  <div class="col-12 ">
    <nav class="navbar navbar-dark  ">
      <div class="container-fluid d-flex justify-content-center text-center">
        <a class="navbar-brand" href="/">
          <img src="/images/icon_ppal.png" style="height: 4vh;" class="logoText" alt="Tourism"></a>
        <button class=" bg-dark navbar-toggler text-center" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
          <span class="">Registrar lugar </span>
        </button>
        <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Registrar Lugar</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
    
                <form 
        action="/places/createPlace/<%=result[0].location_id %>"
        method="post"
        enctype="multipart/form-data"
        class="form d-flex flex-column p-5">
        
          <label for="place_name">Nombre del lugar 
          </label>
           <input 
           type="text"
           name="place_name"
           id="place_name">
    
         <label for="address">address </label>
          <input 
         type="text" 
          name="address" 
          id="address">
     
  
          <label for="file">Imagen</label>
          <input type="file"
          name="file"
          id="img">
    
        <button class="btn btn-primary " type="submit">Enviar</button>
        <span style="color:red"><%= typeof message != "undefined" ? message : null %></span>
        </form>
              </li>
            
              <div class="d-flex justify-content-end">
                <ul class="navbar-nav mb-2 mb-lg-0  " style="padding-left: 5rem; ">
                  <li class="nav-item py-2 py-lg-1 col-12 col-lg-auto d-lg-none ">
                    <div class="vr d-none d-lg-flex h-100 mx-lg-2 text-white"></div>
                    <hr class="d-lg-none my-2 text-white-50">
                  </li>
    
            
    
                </ul>
              </div>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <br>
   
  </div>

</main>
</body>

<%- include("footer") %>
